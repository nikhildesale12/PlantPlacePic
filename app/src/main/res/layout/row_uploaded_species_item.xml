<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewUploadedSpecies"
        android:layout_width="match_parent"
        android:layout_height="@dimen/species_folder_height"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textViewSpeciesName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="@color/colorgray"
        android:layout_gravity="center"
        android:layout_below="@+id/imageViewUploadedSpecies"
        android:text="Species Name"/>

    <RelativeLayout
        android:id="@+id/selected_overlay_folder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:background="#80000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/checkinside"/>

    </RelativeLayout>

</RelativeLayout>