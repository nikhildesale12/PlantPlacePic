<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ibin.plantplacepic.fragment.FragmentAllMountingBoard">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    tools:context=".activities.MountingBoardActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarMbMy"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="My Mounting Board"
            app:titleTextColor="@color/colorWhite"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/mytextMessageMb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:text="No Internet Available"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_mounting_board_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbarMbMy"
            android:scrollbars="vertical"/>

    </RelativeLayout>

</FrameLayout>
