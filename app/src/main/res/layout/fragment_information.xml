<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.ibin.plantplacepic.fragment.InformationFragment">


    <TextView
        android:id="@+id/textviewSpeciesInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:text="Species Information"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_info_species"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2"
        android:layout_margin="5dp"
        android:layout_below="@+id/textviewSpeciesInformation"/>

</RelativeLayout>
