<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibin.plantplacepic.activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#4CC784"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:background="@drawable/headimage"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/title_font_size"
                    android:textStyle="bold"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/editTextUserSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_info_edittext_height"
                    android:layout_marginTop="10dp"
                    android:hint="Please Enter Email"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="@dimen/image_info_text_font_size"
                    android:background="@drawable/edittextbg"/>

                <EditText
                    android:id="@+id/editTextPassSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_info_edittext_height"
                    android:layout_marginTop="10dp"
                    android:hint="Please Enter Password"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/image_info_text_font_size"
                    android:inputType="textPassword"
                    android:background="@drawable/edittextbg"/>

                <EditText
                    android:id="@+id/editTextConfirmPassSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_info_edittext_height"
                    android:layout_marginTop="10dp"
                    android:hint="Confirm Password"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/image_info_text_font_size"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:background="@drawable/edittextbg"/>

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:text="Sign Up"
                    android:textSize="@dimen/image_info_text_font_size"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_selector"/>
            </LinearLayout>


          <!--  <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loginwitthgmail"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>-->
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
