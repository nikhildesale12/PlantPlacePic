<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibin.plantplacepic.activities.SpeciesSearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarSpeciesSearch"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="@string/species_search_activity"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/toolbarSpeciesSearch">

        <RelativeLayout
            android:id="@+id/buttonSpeciesAroundYou"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#FAC090"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.22">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/mapicon"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Species Around You"
                android:layout_centerVertical="true"
                android:textSize="24sp"
                android:paddingRight="10dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iconSearch"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonSpeciesByName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#A3C3E0"
            android:layout_weight="0.22">

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/searchicon"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Species By Name"
                android:layout_centerVertical="true"
                android:textSize="24sp"
                android:layout_toRightOf="@+id/imgSearch"
                android:textColor="@color/colorText"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/buttonBackSpeciesSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_info_edittext_height"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_selector"/>

</RelativeLayout>
